<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Açıklama Metni -->
    <TextView
        android:id="@+id/tv_forgot_password_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lütfen e-posta adresinizi veya kullanıcı adınızı girin. Şifre sıfırlama kodu e-posta adresinize gönderilecektir."
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- E-posta veya Kullanıcı Adı -->
    <EditText
        android:id="@+id/et_email_or_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-posta veya Kullanıcı Adı"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Gönder Butonu -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kod Gönder"
        android:layout_marginTop="16dp" />
</LinearLayout>
